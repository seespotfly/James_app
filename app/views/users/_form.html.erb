<%= form_for(@user, html: {role: "form"}) do |f| %>
<div class="form-group">
  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
      <% if @user.errors.any? %>
        <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :phone_number %><br>
        <%= f.text_field :phone_number %>
      </div>
      <div class="field">
        <%= f.label :company_id, "Company" %><br>
        <%= f.select :company_id, Organization.all.map{ |o| [o.name, o.id] } %>
      </div>
      <p>&nbsp;</p>
      <div class="actions">
        <%= f.submit class: "btn btn-primary btn-md"  %>
      </div>
    </div>
  </div>
</div>
<% end %>
